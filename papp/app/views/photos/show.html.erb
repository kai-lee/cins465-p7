<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @photo.name %>
</p>
<% if user_signed_in? %>
<p>
  <strong>Description:</strong>
  <%= @photo.description %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @photo.tags %>
</p>
<% end %>
<p>
  <strong>Picture:</strong>
  <%= image_tag(@photo.picture_url, :width => 600) if @photo.picture.present? %>
</p>
<% if user_signed_in? %>
<% if @photo.user_id.match(current_user.email) %>
<%= link_to 'Edit', edit_photo_path(@photo) %> | 
<% end %>
<% end %>
<%= link_to 'Back', photos_path %>
